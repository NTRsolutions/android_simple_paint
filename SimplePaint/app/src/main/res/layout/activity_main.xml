<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.the.simplepaint.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNew"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_new"/>

            <ImageButton
                android:id="@+id/btnBrush"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_brush"/>

            <ImageButton
                android:id="@+id/btnEraser"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_eraser"/>

            <ImageButton
                android:id="@+id/btnColorPicker"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/ic_color_picker"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.example.the.simplepaint.CustomView
            android:id="@+id/customView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            />

    </LinearLayout>

</LinearLayout>
